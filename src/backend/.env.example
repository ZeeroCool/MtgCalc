# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# API Keys (comma-separated for multiple keys)
API_KEYS=

# Security
SESSION_SECRET=your-session-secret-here

# Database (if adding database later)
# DATABASE_URL=postgresql://user:password@localhost:5432/mortgage_calculator

# External APIs (if integrating with real rate providers)
# RATE_API_KEY=your-rate-api-key
# RATE_API_URL=https://api.rateprovider.com

# Logging
LOG_LEVEL=info

# Performance
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100